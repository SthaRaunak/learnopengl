{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: clang build active file",
      "command": "/usr/bin/clang",
      "args": [
        "-std=c++17",
        "-fcolor-diagnostics",
        "-fansi-escape-codes",
        "-Wall",
        "-g",
        "-I/opt/homebrew/opt/glfw/include", // Updated include path
        "-I${workspaceFolder}/dependencies/include",
        "-L/opt/homebrew/opt/glfw/lib", // Updated library path
        "-L${workspaceFolder}/dependencies/library",
        // "${workspaceFolder}/dependencies/library/libglfw.3.4.dylib",
        "-lglfw", // Link GLFW library
        "-lc++", // Link with the C++ standard library
        "${workspaceFolder}/main.cpp", // Source files
        "${workspaceFolder}/glad.cpp",
        "-o",
        "${workspaceFolder}/app", // Output executable
        "-framework",
        "OpenGL",
        "-framework",
        "Cocoa",
        "-framework",
        "IOKit",
        "-framework",
        "CoreVideo",
        "-framework",
        "CoreFoundation",
        "-Wno-deprecated"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "compiler: /usr/bin/clang"
    }
  ]
}
